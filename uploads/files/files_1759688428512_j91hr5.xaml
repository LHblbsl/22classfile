<Window x:Class="testdemo.AlarmNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AlarmNotificationWindow" 
        Height="280" 
        Width="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <Grid>
        <!-- 外边框：进度条 -->
    <Border x:Name="ProgressBorder"
            CornerRadius="20"
            BorderThickness="10"
            BorderBrush="#FF00A0E9"
            Width="350"
            Height="280">
        <Border.Clip>
            <RectangleGeometry x:Name="ProgressClip" Rect="0,0,350,280"/>
        </Border.Clip>
    </Border>
    <Border x:Name="MainBorder" 
            CornerRadius="20" 
            Background="#800078D7"
            Width="350" 
            Height="280">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="Black" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 大号标题 -->
            <TextBlock x:Name="TitleText" 
                       Grid.Row="0"
                       Text="闹钟即将开始" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,15"
                       TextAlignment="Center"/>

            <!-- 中号文字（API名言） -->
            <TextBlock x:Name="QuoteText" 
                       Grid.Row="1"
                       Text="加载中..." 
                       FontSize="16" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="300"/>

            <!-- 倒计时显示 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                <TextBlock Text="距离闹钟开始：" 
                           FontSize="14" 
                           Foreground="White" 
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="CountdownText" 
                           Text="计算中..." 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#FFFF6B6B" 
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </StackPanel>

            <!-- 关闭按钮 -->
            <Button x:Name="CloseButton"
                    Grid.Row="4"
                    Content="关闭" 
                    Width="120"
                    Height="40"
                    Background="#FFE74C3C"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Click="CloseButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"  
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFC0392B"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFA93226"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
        <!-- 拖动区域（覆盖整个窗口） -->
        <Grid Margin="10" MouseLeftButtonDown="DragWindow_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 标题栏拖动区域 -->
            <Border Grid.Column="0" Grid.Row="0" Height="30" Background="Transparent"/>
            <!-- 右上角留出关闭按钮空间 -->
            <Border Grid.Column="1" Grid.Row="0" Width="40" Height="30" Background="Transparent"/>
        </Grid>
    </Grid>
</Window>