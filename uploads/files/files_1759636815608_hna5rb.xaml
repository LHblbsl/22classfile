<Window x:Class="testdemo.NumberSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:testdemo"
        mc:Ignorable="d"
        Title="Number Settings"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Height="500" 
        Width="800"
        SizeToContent="Manual"
        Topmost="True">

    <Window.Resources>
        <local:UpStudentBorderThicknessConverter x:Key="UpStudentBorderThicknessConverter"/>
        <local:UpStudentBorderBrushConverter x:Key="UpStudentBorderBrushConverter"/>
        <local:UpStudentForegroundConverter x:Key="UpStudentForegroundConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- 展开动画 - 修改高度为500 -->
        <Storyboard x:Key="ExpandAnimation">
            <DoubleAnimation
                Storyboard.TargetName="settingsCapsuleBorder"
                Storyboard.TargetProperty="Width"
                From="0" To="1100"
                Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <ElasticEase EasingMode="EaseOut" Oscillations="2" Springiness="3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="settingsCapsuleBorder"
                Storyboard.TargetProperty="Height"
                From="0" To="300"
                Duration="0:0:0.8">
                <DoubleAnimation.EasingFunction>
                    <ElasticEase EasingMode="EaseOut" Oscillations="2" Springiness="3"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- 关闭动画 -->
        <Storyboard x:Key="CloseWindowAnimation">
            <DoubleAnimation
                Storyboard.TargetName="settingsCapsuleBorder"
                Storyboard.TargetProperty="Height"
                To="0"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- 图像点击动画 -->
        <Storyboard x:Key="CloseImageClickAnimation">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="RenderTransform.ScaleX">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.8">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <ElasticEase EasingMode="EaseOut" Oscillations="2" Springiness="4"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="6"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="RenderTransform.ScaleY">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.8">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <ElasticEase EasingMode="EaseOut" Oscillations="2" Springiness="4"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <ElasticEase EasingMode="EaseOut" Oscillations="1" Springiness="6"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- 滚动条样式 -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="{Binding DarkerThemeBrush}"/>
            <Setter Property="BorderBrush" Value="{Binding DarkerThemeBrush}"/>
            <Setter Property="Width" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid>
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border CornerRadius="6" 
                                                    Background="{Binding DarkerThemeBrush}"
                                                    Margin="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 主容器 -->
    <Grid>
        <!-- 胶囊型窗口的主要容器 - 修改高度为300 -->
        <Border x:Name="settingsCapsuleBorder"
            
                Width="800"
                Background="#800000FF"
                RenderTransformOrigin="0.5,0.5">


            <!-- 内部布局改为两行 -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- 控制行 -->
                    <RowDefinition Height="*"/>
                    <!-- 结果显示行 - 改为*以填充剩余空间 -->
                </Grid.RowDefinitions>

                <!-- 控制区域 -->
                <Grid Grid.Row="0" Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 标题 -->
                    <TextBlock Grid.Column="0"
                               Text="单抽人数设置："
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="20,0,10,0"/>

                    <!-- 胶囊型输入框 -->
                    <Border Grid.Column="1"
                            x:Name="inputBorder"
                            Background="{Binding DarkerThemeBrush}"
                            Height="40"
                            Width="100"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                        <Border.Clip>
                            <RectangleGeometry RadiusX="20" RadiusY="20" Rect="0,0,100,40"/>
                        </Border.Clip>
                        <TextBox x:Name="numberTextBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 FontSize="18"
                                 FontWeight="Bold"
                                 Text="1"
                                 HorizontalContentAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Padding="10,0"/>
                    </Border>

                    <!-- 应用按钮 -->
                    <Button Grid.Column="2"
        x:Name="applyButton"
        Content="开始"
        Background="{Binding DarkerThemeBrush}"
        Foreground="White"
        FontSize="16"
        FontWeight="Bold"
        BorderThickness="0"
        Width="100"
        Height="40"
        VerticalAlignment="Center"
        Margin="0,0,15,0"
        Cursor="Hand">
                        <!-- 移除这里的 Click="ApplyButton_Click" -->
                        <Button.Clip>
                            <RectangleGeometry RadiusX="20" RadiusY="20" Rect="10,2,80,35"/>
                        </Button.Clip>
                    </Button>

                    <!-- 关闭按钮 -->
                    <Image Grid.Column="3"
                           x:Name="closeImage" 
                           Source="关闭.png"
                           Stretch="Uniform"
                           Width="30"
                           Height="30"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0"
                           Cursor="Hand">
                        <Image.RenderTransform>
                            <ScaleTransform x:Name="closeImageScale" ScaleX="1" ScaleY="1"/>
                        </Image.RenderTransform>
                    </Image>
                </Grid>

                <!-- 修改结果显示区域 - 移除固定高度，使用剩余空间 -->
                <ScrollViewer Grid.Row="1" 
                              x:Name="resultsScrollViewer"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto"
                              Margin="20,10,20,20"
                              Visibility="Collapsed">
                    <ItemsControl x:Name="resultsItemsControl"
                                  ItemsSource="{Binding StudentCards}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"
                                           HorizontalAlignment="Center"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <!-- 修改结果显示区域的卡片模板 --><!-- 背景布局 --><!-- 半透明金色 -->
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="180" Height="180"
                Margin="15"
                CornerRadius="20"
                BorderThickness="{Binding IsUpStudent, Converter={StaticResource UpStudentBorderThicknessConverter}}"
                BorderBrush="{Binding IsUpStudent, Converter={StaticResource UpStudentBorderBrushConverter}}"
                Background="#1FFFFFFF">

                                    
                                    <Grid>
                                        <!-- 背景头像 -->
                                        <Image Source="{Binding Avatar}"
                       Stretch="UniformToFill"
                       Opacity="0.3"/>

                                        <!-- 金色叠加层（仅UP学生显示） -->
                                        <Rectangle x:Name="goldOverlay"
                           Fill="#80FFD700" 
                                            Opacity="0.3"
                           Visibility="{Binding IsUpStudent, Converter={StaticResource BooleanToVisibilityConverter}}"
                           RadiusX="20" RadiusY="20"/>

                                            <!-- 卡片内容 -->
                                            <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="10">
                                                <Image Source="{Binding Avatar}"
                           Width="80" Height="80"
                           Margin="0,0,0,10">
                                                    <Image.Clip>
                                                        <EllipseGeometry Center="40,40" RadiusX="40" RadiusY="40"/>
                                                    </Image.Clip>
                                                </Image>
                                                <TextBlock Text="{Binding DisplayText}"
                               Foreground="{Binding IsUpStudent, Converter={StaticResource UpStudentForegroundConverter}}"
                               FontSize="20"
                               FontWeight="Bold"
                               TextAlignment="Center"
                               TextWrapping="Wrap">
                                                    <TextBlock.Effect>
                                                        <DropShadowEffect Color="Black" ShadowDepth="0" BlurRadius="6" Opacity="1"/>
                                                    </TextBlock.Effect>
                                                </TextBlock>
                                            </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>