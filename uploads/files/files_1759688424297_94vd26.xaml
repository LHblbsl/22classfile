<Window x:Class="testdemo.AlarmDebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="闹钟调试" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- 复用设置窗口的胶囊型样式 -->
        <Style x:Key="CapsuleTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#A00078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            BorderThickness="0"
                            Padding="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CapsuleButton" TargetType="Button">
            <Setter Property="Background" Value="#B00078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            CornerRadius="15"
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C00078D7"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D00078D7"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- 自定义滚动容器，支持触屏滚动 -->
    <ScrollViewer x:Name="MainScrollViewer"
                  VerticalScrollBarVisibility="Auto"
                  PanningMode="VerticalOnly"
                  PanningDeceleration="0.01"
                  IsManipulationEnabled="True"
                  ScrollChanged="MainScrollViewer_ScrollChanged">
        <ScrollViewer.Template>
            <ControlTemplate TargetType="ScrollViewer">
                <Grid x:Name="Grid" Background="{TemplateBinding Background}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 透明Thumb实现触屏拖动 -->
                    <Thumb x:Name="DragThumb" Grid.Column="0" Background="Transparent">
                        <Thumb.Template>
                            <ControlTemplate>
                                <Border Background="Transparent"/>
                            </ControlTemplate>
                        </Thumb.Template>
                    </Thumb>

                    <!-- 内容展示区域 -->
                    <ScrollContentPresenter Grid.Column="0" Margin="20"/>

                    <!-- 自定义垂直滚动条 -->
                    <Border Grid.Column="1" Width="8" Margin="0,10,10,10">
                        <Track x:Name="PART_Track" IsDirectionReversed="True" ViewportSize="NaN">
                            <Track.Thumb>
                                <Thumb x:Name="VerticalThumb" Width="8" MinHeight="30">
                                    <Thumb.Style>
                                        <Style TargetType="Thumb">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Thumb">
                                                        <Border x:Name="ThumbBorder" 
                                                                CornerRadius="4" 
                                                                Background="#600078D7"
                                                                BorderThickness="0"/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#800078D7"/>
                                                </Trigger>
                                                <Trigger Property="IsDragging" Value="True">
                                                    <Setter Property="Background" Value="#A00078D7"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Thumb.Style>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Border>
                </Grid>
            </ControlTemplate>
        </ScrollViewer.Template>

        <StackPanel Margin="20">
            <!-- 导入音乐区域 -->
            <GroupBox Header="音乐文件管理" BorderBrush="#A00078D7" Foreground="#A00078D7" Margin="0,0,0,10">
                <StackPanel Margin="10">
                    <Button x:Name="ImportMusicButton" Content="导入音乐" 
                            Style="{StaticResource CapsuleButton}" 
                            Click="ImportMusicButton_Click"
                            Margin="0,0,0,10"/>

                    <TextBlock Text="已导入的音乐文件:" FontWeight="Bold" Margin="0,0,0,5" Foreground="#A00078D7"/>

                    <Border BorderBrush="#A00078D7" BorderThickness="1" CornerRadius="5" 
                            Height="80" Background="#100078D7">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="MusicFilesList" Margin="5"/>
                        </ScrollViewer>
                    </Border>

                    <Button x:Name="ClearAllButton" Content="清空全部" 
                            Style="{StaticResource CapsuleButton}" 
                            Click="ClearAllButton_Click"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- 时间设置区域 -->
            <GroupBox Header="时间设置" BorderBrush="#A00078D7" Foreground="#A00078D7" Margin="0,10">
                <StackPanel Margin="10">
                 
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="闹钟标题:" Width="80" VerticalAlignment="Center" Foreground="#A00078D7"/>
                        <TextBox x:Name="AlarmTitleInput" Style="{StaticResource CapsuleTextBox}" Text="午休" Width="120" Margin="5,0"/>
                    </StackPanel>
                    <!-- 开始时间 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="开始时间:" Width="80" VerticalAlignment="Center" Foreground="#A00078D7"/>
                        <TextBox x:Name="StartHourInput" Style="{StaticResource CapsuleTextBox}" Text="9" Width="40" Margin="5,0"/>
                        <TextBlock Text="时" Width="20" VerticalAlignment="Center" Foreground="#A00078D7"/>
                        <TextBox x:Name="StartMinuteInput" Style="{StaticResource CapsuleTextBox}" Text="0" Width="40" Margin="5,0"/>
                        <TextBlock Text="分" Width="20" VerticalAlignment="Center" Foreground="#A00078D7"/>
                        <TextBox x:Name="StartSecondInput" Style="{StaticResource CapsuleTextBox}" Text="0" Width="40" Margin="5,0"/>
                        <TextBlock Text="秒" Width="20" VerticalAlignment="Center" Foreground="#A00078D7"/>
                    </StackPanel>

                    <!-- 关闭时间 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="关闭时间:" Width="80" VerticalAlignment="Center" Foreground="#A00078D7"/>
                        <TextBox x:Name="EndHourInput" Style="{StaticResource CapsuleTextBox}" Text="17" Width="40" Margin="5,0"/>
                        <TextBlock Text="时" Width="20" VerticalAlignment="Center" Foreground="#A00078D7"/>
                        <TextBox x:Name="EndMinuteInput" Style="{StaticResource CapsuleTextBox}" Text="0" Width="40" Margin="5,0"/>
                        <TextBlock Text="分" Width="20" VerticalAlignment="Center" Foreground="#A00078D7"/>
                        <TextBox x:Name="EndSecondInput" Style="{StaticResource CapsuleTextBox}" Text="0" Width="40" Margin="5,0"/>
                        <TextBlock Text="秒" Width="20" VerticalAlignment="Center" Foreground="#A00078D7"/>
                    </StackPanel>

                    <!-- 预备时间 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="提前预备时间:" Width="80" VerticalAlignment="Center" Foreground="#A00078D7"/>
                        <TextBox x:Name="PrepareTimeInput" Style="{StaticResource CapsuleTextBox}" Text="300" Width="60" Margin="5,0"/>
                        <TextBlock Text="秒" Width="30" VerticalAlignment="Center" Foreground="#A00078D7"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- 音量设置 -->
            <GroupBox Header="音量设置" BorderBrush="#A00078D7" Foreground="#A00078D7" Margin="0,10">
                <StackPanel Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="播放音量:" Width="80" VerticalAlignment="Center" Foreground="#A00078D7"/>
                        <TextBox x:Name="VolumeInput" Style="{StaticResource CapsuleTextBox}" Text="50" Width="60" Margin="5,0"/>
                        <TextBlock Text="(0-100)" Width="60" VerticalAlignment="Center" Foreground="#A00078D7"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- 操作按钮 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button x:Name="ApplyButton" Content="应用配置" 
                        Style="{StaticResource CapsuleButton}" 
                        Click="ApplyButton_Click"
                        Margin="0,0,10,0"/>
                <Button x:Name="SaveSettingsButton" Content="保存设置" 
                        Style="{StaticResource CapsuleButton}" 
                        Click="SaveSettingsButton_Click"
                        Margin="10,0,10,0"/>
                <Button x:Name="TestPlayButton" Content="测试播放" 
                        Style="{StaticResource CapsuleButton}" 
                        Click="TestPlayButton_Click"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>